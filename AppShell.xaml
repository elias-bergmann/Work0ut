<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Workout.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Workout"
    Shell.NavBarIsVisible="False"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            Icon="home.svg"
            ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent
            Title="Workout"
            Icon="workout.svg"
            ContentTemplate="{DataTemplate local:ExerciceListPage}" />
        <ShellContent
            Title="Calendar"
            Icon="calendar.svg"
            ContentTemplate="{DataTemplate local:ComingSoonPage}"/>
        <ShellContent
            Title="User"
            Icon="user.svg"
            ContentTemplate="{DataTemplate local:ComingSoonPage}"/>

    </TabBar>



</Shell>
